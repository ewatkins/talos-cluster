---
# yaml-language-server: $schema=https://kubernetes-schemas.pages.dev/source.toolkit.fluxcd.io/ocirepository_v1.json
apiVersion: source.toolkit.fluxcd.io/v1
kind: OCIRepository
metadata:
  name: pulse
spec:
  interval: 5m
  layerSelector:
    mediaType: application/vnd.cncf.helm.chart.content.v1.tar+gzip
    operation: copy
  ref:
    tag: 4.24.0
  url: oci://ghcr.io/rcourtman/pulse-chart
  secretRef:
    name: pulse-secret
---
# yaml-language-server: $schema=https://kube-schemas.pages.dev/helm.toolkit
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: &app pulse
  namespace: observability
spec:
  interval: 30m
  chartRef:
    kind: OCIRepository
    name: pulse
  maxHistory: 2
  install:
    crds: CreateReplace
    remediation:
      retries: -1
  upgrade:
    crds: CreateReplace
    cleanupOnFail: true
    remediation:
      retries: 3
  uninstall:
    keepHistory: false
  values:
    replicaCount: 2

    ingress:
      enabled: true
      className: internal
      annotations:
        external-dns.alpha.kubernetes.io/target: "internal.ewatkins.dev"
      hosts:
        - host: &host "pulse.ewatkins.dev"
          paths:
            - path: /
              type: Prefix

    server:
      env:
        - name: TZ
          value: America/Chicago

    agent:
      enabled: true
      kind: Deployment
      replicaCount: 2
      env:
        - name: PULSE_URL
          value: *host

    persistence:
      enabled: true
      storageClass: "nfs-fast"
      accessModes:
        - ReadWriteMany
      size: 10Gi
