{
  "editor.bracketPairColorization.enabled": true,
  // "editor.fontFamily": "Hack Nerd Font Regular",
  // "editor.fontSize": 13,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.hover.delay": 1500,
  "editor.stickyScroll.enabled": false,
  //"terminal.integrated.fontFamily": "Hack Nerd Font Regular",
  //"terminal.integrated.fontSize": 13,
  //"terminal.integrated.lineHeight": 1.2,
  //"terminal.integrated.scrollback": 100000,
  "explorer.autoReveal": false,
  "files.trimTrailingWhitespace": true,
  "material-icon-theme.files.associations": {
    // TODO: https://github.com/PKief/vscode-material-icon-theme/issues/330
    "*.secret.sops.env": "lock",
    "*.secret.sops.yaml": "lock",
    "secret.sops.yaml": "lock",
    "externalsecret.yaml": "lock",
    "helmrelease.yaml": "helm",
    "*.helmrelease.yaml": "helm",
    "rbac.yaml": "key"
  },
  "material-icon-theme.folders.associations": {
    ".taskfiles": "utils",
    "bootstrap": "import",
    "charts": "kubernetes",
    "repositories": "database",
    "terraforms": "terraform",
    "vars": "other",
    // top level
    ".archive": "archive",
    // .github
    ".github/workflows": "robot",
    // namespaces
    "actions-runner-system": "github",
    "cert-manager": "guard",
    "default": "home",
    "digester-system": "hook",
    "external-secrets": "secure",
    "flux-system": "pipe",
    "kube-system": "kubernetes",
    "monitoring": "event",
    "network": "connection",
    "networking": "connection",
    "observability": "event",
    "rook-ceph": "base",
    "storage": "dump",
    "system-upgrade": "update",
    "tools": "tools",
    "volsync": "aws"
  },
  "sops.defaults.ageKeyFile": "age.key",
  "vs-kubernetes": {
    "vs-kubernetes.kubeconfig": "./kubeconfig",
    "vs-kubernetes.knownKubeconfigs": ["./kubeconfig"]
  },
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": "./kubernetes/**/*.yaml"
  }
}
